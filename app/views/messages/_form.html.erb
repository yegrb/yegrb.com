<%= simple_form_for @message do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<div class="form-inputs row">
    <div class="col-12 col-xl-4">

        <h3 class="text-red"><%= image_tag 'email.svg', class:'smaller-icon' %> Email Andy and Will</h3>
    </div>
    <div class="col-md-6 col-xl-4">
        <%= f.input :name, label: false, placeholder: "Name" %>
    </div>
    <div class="col-md-6 col-xl-4">
        <%= f.input :email, label: false, placeholder: "Email" %>
    </div>
    <div class="col-12">
        <%= f.input :body, label: false, placeholder: "Message", as: :text, input_html: {rows: 8} %>
    </div>
</div>

<div class="form-actions">
    <%= f.submit 'Send Form', class: 'btn btn-red'%>
</div>
<% end %>